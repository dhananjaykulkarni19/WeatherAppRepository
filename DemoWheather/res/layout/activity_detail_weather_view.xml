<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey" >

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/background_with_shadow"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvselectcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/navy_blue"
            android:padding="10dp"
            android:textSize="15sp"
            android:text="Select City" />

        <ImageView
            android:id="@+id/btnprevious"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvselectcity"
            android:src="@drawable/arrow_left" />

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvselectcity"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tvdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvselectcity"
            android:layout_toLeftOf="@+id/btnNext"
            android:layout_toRightOf="@+id/btnprevious"
            android:gravity="center"
            android:padding="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel1"
        android:layout_margin="5dp"
        android:background="@drawable/background_with_shadow"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <LinearLayout 
                    android:id="@+id/lin_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/lbldaytemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Day Temprature" />

                    <TextView
                        android:id="@+id/txtdaytemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                </LinearLayout>
                <LinearLayout 
                    android:id="@+id/lin_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_1"
                    android:layout_margin="10dp">
                   
                   <TextView
                        android:id="@+id/lblmintemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Min. Temprature" />

                    <TextView
                        android:id="@+id/txtmintemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                </LinearLayout>
                <LinearLayout 
                    android:id="@+id/lin_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_2"
                    android:layout_margin="10dp">
                <TextView
                        android:id="@+id/lblmaxtemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Max. Temprature" />

                    <TextView
                        android:id="@+id/txtmaxtemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                    
                </LinearLayout>
                <LinearLayout 
                    android:id="@+id/lin_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_3"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/lblnighttemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Night Temprature" />

                    <TextView
                        android:id="@+id/txtnighttemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                </LinearLayout>
                <LinearLayout 
                    android:id="@+id/lin_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_4"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/lblevetemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Evening Temprature" />

                    <TextView
                        android:id="@+id/txtevetemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                </LinearLayout>
                <LinearLayout 
                    android:id="@+id/lin_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_5"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/lblmorntemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Morning Temprature" />

                    <TextView
                        android:id="@+id/txtmorntemp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                </LinearLayout>
                <LinearLayout 
                    android:id="@+id/lin_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_6"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/lblpressure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Atmo. Pressure" />

                    <TextView
                        android:id="@+id/txtpressure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_8" 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_7"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/lblumidity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Humidity" />

                    <TextView
                        android:id="@+id/txthumidity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_9" 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_8"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/lblweather"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Weather" />

                    <TextView
                        android:id="@+id/txtweather"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                </LinearLayout>
                <LinearLayout
					android:id="@+id/lin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_9"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/lblwindspeed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wind Speed" />

                    <TextView
                        android:id="@+id/txtwindspeed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
